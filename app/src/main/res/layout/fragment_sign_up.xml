<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="Hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_hello"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="36sp"
        android:textStyle="normal|italic" />

    <TextView
        android:text="Тут будет вот такой крутой текст, над которым у меня пока нет времени подумать, кароче WELCOME"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_preview"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_hello"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edt_nickname"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_preview"
        android:hint="put your nickname here" />

    <Button
        android:text="Next"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_next"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_nickname"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@android:style/Widget.Button"
        android:elevation="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_already_registered"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/already_registered"
        android:textColor="@color/md_blue_700"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintVertical_bias="0.33" />

    <ProgressBar
        android:visibility="invisible"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/edt_nickname"
        app:layout_constraintTop_toTopOf="@+id/edt_nickname"
        app:layout_constraintLeft_toRightOf="@+id/edt_nickname"
        android:layout_marginLeft="24dp" />

    <ImageView
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/green_check_mark"
        android:id="@+id/img_check"
        app:layout_constraintBottom_toBottomOf="@+id/progress_bar"
        app:layout_constraintRight_toRightOf="@+id/progress_bar"
        app:layout_constraintLeft_toLeftOf="@+id/progress_bar"
        app:layout_constraintTop_toTopOf="@+id/progress_bar" />

</android.support.constraint.ConstraintLayout>