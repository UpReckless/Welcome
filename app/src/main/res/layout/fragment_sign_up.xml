<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.subinkrishna.widget.CircularImageView
        android:clickable="true"
        android:id="@+id/photo"
        android:src="@mipmap/img_avatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        app:ci_borderWidth="2dp"
        app:ci_borderColor="@android:color/white"
        app:ci_placeholderBackgroundColor="@android:color/black"
        app:ci_shadowRadius="5.0"
        app:ci_shadowColor="#999999"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="49dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/edit_mail"
            android:hint="@string/edit_mail"
            android:layout_width="258dp"
            android:layout_height="39dp"
            app:layout_constraintLeft_toLeftOf="@+id/edit_name"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_name"
            app:layout_constraintRight_toRightOf="@+id/edit_name"
            app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/btn_go"
        android:layout_gravity="end"
        android:text="@string/sign_up"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        app:layout_constraintRight_toRightOf="@+id/photo"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_mail" />

    <EditText
        android:id="@+id/edit_name"
        android:hint="@string/edit_name"
        android:layout_width="258dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/photo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintRight_toRightOf="@+id/photo" />

    <TextView
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/app_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/photo"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toRightOf="@+id/photo"
        app:layout_constraintLeft_toLeftOf="@+id/photo"
        android:textSize="24sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:text="@string/language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_language"
        app:layout_constraintBottom_toTopOf="@+id/btn_go"
        app:layout_constraintTop_toTopOf="@+id/btn_go"
        app:layout_constraintLeft_toLeftOf="@+id/edit_mail" />

    <RadioButton
        android:text="@string/english"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rb_english"
        app:layout_constraintTop_toBottomOf="@+id/view_language"
        app:layout_constraintLeft_toLeftOf="@+id/view_language"
        android:layout_marginTop="8dp" />

    <RadioButton
        android:text="@string/russian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rb_russian"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/rb_english"
        app:layout_constraintLeft_toLeftOf="@+id/rb_english" />

    <TextView
        android:textColor="#0f299e"
        android:text="@string/already_registered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_already_registered"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/photo"
        app:layout_constraintVertical_bias="0.96"
        app:layout_constraintLeft_toLeftOf="@+id/photo"
        app:layout_constraintRight_toRightOf="@+id/photo" />

</android.support.constraint.ConstraintLayout>